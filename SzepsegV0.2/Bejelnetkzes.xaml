<Window x:Class="SzepsegV0._2.Bejelnetkzes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SzepsegV0._2"
        mc:Ignorable="d"
        Title="Bejelnetkzes" Height="480" Width="750">
    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="108*"/>
        </Grid.ColumnDefinitions>
        <!-- GAIA Logo -->
        <StackPanel Orientation="Horizontal" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <Ellipse Width="30" Height="30" Fill="LightGreen"/>
            <TextBlock Text="GAIA" FontSize="20" Foreground="LightGreen" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Appointment buttons -->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,212,0,0" Grid.ColumnSpan="2">
            <Button Content="Időpont foglalás" Width="200" Height="50" Background="#BCC0AB" Margin="0,10"/>
            <Button Content="Időpont törlés/módosítás" Width="200" Height="50" Background="#BCC0AB" Margin="0,10"/>
        </StackPanel>

        <!-- Logout button -->
        <Button Content="Kijelentkezés" Width="200" Height="50" Background="#BCC0AB" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,20" Grid.ColumnSpan="2"/>

        <!-- User information box -->
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" Grid.Column="1">
            <TextBlock Text="Felhasználó" FontSize="20" Foreground="LightGreen" HorizontalAlignment="Right"/>
            <Border BorderThickness="1" BorderBrush="LightGreen" Background="#4A574A" Width="300" Height="300" Margin="0,20,0,0">
                <TextBlock Text="A felhasználó foglalásai" FontSize="16" Foreground="LightGreen" Margin="10"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
